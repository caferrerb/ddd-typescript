{
  "name": "ddd-typescript",
  "version": "1.0.0",
  "description": "Domain-Driven Design TypeScript project",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
